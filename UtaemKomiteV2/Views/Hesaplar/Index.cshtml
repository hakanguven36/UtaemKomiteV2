@model UtaemKomiteV2.ViewModels.HesaplarViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutGiris.cshtml";
}

<br />
<div class="form-row">
    <div class="col-sm-8">
            
                    <div style="background-color:rgba(200,200,200,.2); padding:2em; border-radius:1em">
                        <hr />
                        <h4> Uluslararası Tarımsal Araştırma ve Eğitim Merkezi </h4>
                        <h2> UTAEM - Dosya Paylaşım </h2>
                        <hr />
                    </div>                    
            
        
    </div>
    <div class="col-sm-4" style="background-color:rgba(200,200,200,.2); padding:2em; border-radius:1em">
        <h2>Kullanıcı Girişi</h2>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="username" class="control-label"></label>
                <input asp-for="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="remember" /> @Html.DisplayNameFor(model => model.remember)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş" class="btn btn-secondary form-control" />
            </div>
        </form>
    </div>
</div>